---
import React from 'react';

const FooterLink = ({ href, children }: { href: string; children: React.ReactNode }) => (
  <a
    href={href}
    className="text-white/80 hover:text-white transition-colors duration-300 text-sm"
  >
    {children}
  </a>
);

const FooterColumn = ({ 
  title, 
  links = [],
  className
}: { 
  title: string; 
  links?: Array<{ label: string; href: string }>;
  className?: string;
}) => (
  <div className={`flex flex-col space-y-3 ${className}`}>
    <h3 className="font-medium text-white tracking-wide mb-1">{title}</h3>
    {links.map((link, i) => (
      <FooterLink key={i} href={link.href}>
        {link.label}
      </FooterLink>
    ))}
  </div>
);

const DownloadButton = ({ 
  href, 
  platform, 
  className 
}: { 
  href: string; 
  platform: string; 
  className?: string; 
}) => (
  <a 
    href={href} 
    className={`flex items-center px-5 py-3 bg-white/10 rounded-lg hover:bg-white/20 transition-all duration-300 gap-3 group ${className}`}
  >
    <div className="bg-white/20 p-2 rounded-full group-hover:bg-white/30 transition-colors">
      {/* Icône SVG inline */}
      {platform === "App Store" ? (
        <svg className="w-5 h-5 text-white" viewBox="0 0 24 24" fill="currentColor">
          <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
        </svg>
      ) : (
        <svg className="w-5 h-5 text-white" viewBox="0 0 24 24" fill="currentColor">
          <path d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.5,12.92 20.16,13.19L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"/>
        </svg>
      )}
    </div>
    <div className="flex flex-col">
      <span className="text-xs text-white/70">Télécharger sur</span>
      <span className="font-semibold text-white">{platform}</span>
    </div>
  </a>
);

const Footer = () => {
  return (
    <footer className="w-full bg-[#0A1022] text-white">
      <div className="max-w-7xl mx-auto px-6 py-12 md:py-16">
        <div className="grid grid-cols-1 md:grid-cols-12 gap-10">
          {/* Colonne principale */}
          <div className="col-span-1 md:col-span-6 lg:col-span-5">
            <h2 className="text-2xl font-semibold mb-4">Company</h2>
            <p className="text-white/70 max-w-md mb-6">
              Nous créons des expériences numériques exceptionnelles avec une attention minutieuse aux détails.
            </p>
            
            {/* Boutons de téléchargement */}
            <div className="flex flex-col sm:flex-row gap-4 mb-8">
              <DownloadButton 
                href="https://apps.apple.com/fr/app/c1euro/id6470069252" 
                platform="App Store" 
              />
              <DownloadButton 
                href="https://play.google.com/store/apps/details?id=com.c1euro.user&hl=ln" 
                platform="Google Play" 
              />
            </div>
            
            {/* Icônes sociales */}
            <div className="flex space-x-4">
              <a href="#" className="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center hover:bg-white/20 transition-colors duration-300">
                {/* Icône Facebook */}
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round">
                  <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
                </svg>
              </a>
              {/* Ajoute d'autres icônes sociales ici */}
            </div>
          </div>

          {/* Colonnes de liens */}
          <div className="col-span-1 md:col-span-3 lg:col-span-3 md:ml-auto">
            <FooterColumn
              title="Informations"
              links={[
                { label: "Mentions légales", href: "/mentions-legales" },
                { label: "Conditions générales", href: "/conditions-generales" },
                { label: "Politique de confidentialité", href: "/politique-de-confidentialite" },
                { label: "Nous contacter", href: "https://contact-c1euro.netlify.app/" },
              ]}
            />
          </div>

          <div className="col-span-1 md:col-span-3 lg:col-span-3">
            <FooterColumn
              title="Rubriques"
              links={[
                { label: "Mode Fashion", href: "/vente-de-vetements" },
                { label: "Course Alimentaire", href: "/course-livrer-domicile" },
                { label: "Livreurs Coursiers", href: "/livraison-a-domicile" },
                { label: "High-tech Premium", href: "/high-tech-premium" },
                { label: "Devenir vendeur", href: "/vendre-sur-application-c1euro" },
              ]}
            />
          </div>
        </div>

        {/* Copyright */}
        <div className="mt-12 pt-8 border-t border-white/10 flex flex-col md:flex-row justify-between items-center">
          <p className="text-white/50 text-sm mb-4 md:mb-0">
            © {new Date().getFullYear()} Company. Tous droits réservés.
          </p>
          <div className="flex flex-wrap justify-center gap-6">
            <FooterLink href="/conditions-generales">Conditions d'utilisation</FooterLink>
            <FooterLink href="/politique-de-confidentialite">Politique de confidentialité</FooterLink>
            <FooterLink href="/cookies">Cookies</FooterLink>
          </div>
        </div>
      </div>
    </footer>
  );
};

export default Footer;
