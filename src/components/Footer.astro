---
import { marked } from 'marked';
import { type Footer } from 'types';

interface Props extends Footer {
    'data-sb-field-path'?: string;
}

const { text, 'data-sb-field-path': fieldPath } = Astro.props;
---

{
    text && (
        <footer class="bg-[#0A1022] text-white" data-sb-field-path={fieldPath}>
            <div class="max-w-7xl mx-auto px-6 py-12 md:py-16">
                <div class="grid grid-cols-1 md:grid-cols-12 gap-10">
                    <!-- Colonne Gauche (Logo + Description + Boutons) -->
                    <div class="md:col-span-6 lg:col-span-5">
                        <h2 class="text-2xl font-semibold mb-4">c1euro</h2>
                        <p class="text-white/70 max-w-md mb-6">
                            Nous créons des expériences numériques exceptionnelles avec une attention minutieuse aux détails.
                        </p>

                        <!-- Boutons Téléchargement -->
                        <div class="flex flex-col sm:flex-row gap-4 mb-8">
                            <!-- Bouton App Store -->
                            <a href="https://apps.apple.com/fr/app/c1euro/id6470069252" class="flex items-center px-5 py-3 bg-white/10 rounded-lg hover:bg-white/20 transition-all duration-300 gap-3">
                                <div class="bg-white/20 p-2 rounded-full">
                                    <svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
                                    </svg>
                                </div>
                                <div class="flex flex-col">
                                    <span class="text-xs text-white/70">Télécharger sur</span>
                                    <span class="font-semibold text-white">App Store</span>
                                </div>
                            </a>

                            <!-- Bouton Google Play -->
                            <a href="https://play.google.com/store/apps/details?id=com.c1euro.user&hl=ln" class="flex items-center px-5 py-3 bg-white/10 rounded-lg hover:bg-white/20 transition-all duration-300 gap-3">
                                <div class="bg-white/20 p-2 rounded-full">
                                    <svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.5,12.92 20.16,13.19L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"/>
                                    </svg>
                                </div>
                                <div class="flex flex-col">
                                    <span class="text-xs text-white/70">Télécharger sur</span>
                                    <span class="font-semibold text-white">Google Play</span>
                                </div>
                            </a>
                        </div>

                        <!-- Icônes Sociales -->
                        <div class="flex space-x-4">
                            <a href="#" class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center hover:bg-white/20 transition-colors duration-300">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round">
                                    <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
                                </svg>
                            </a>
                            <!-- Ajoute d'autres icônes sociales ici -->
                        </div>
                    </div>

                    <!-- Colonnes de liens -->
                    <div class="md:col-span-3 lg:col-span-3 md:ml-auto">
                        <h3 class="text-lg font-semibold text-white mb-4">Informations</h3>
                        <ul class="space-y-2">
                            <li><a href="/mentions-legales" class="text-white/80 hover:text-white transition-colors duration-300">Mentions légales</a></li>
                            <li><a href="/conditions-generales" class="text-white/80 hover:text-white transition-colors duration-300">Conditions générales</a></li>
                            <li><a href="/politique-de-confidentialite" class="text-white/80 hover:text-white transition-colors duration-300">Politique de confidentialité</a></li>
                            <li><a href="https://contact-c1euro.netlify.app/" class="text-white/80 hover:text-white transition-colors duration-300">Nous contacter</a></li>
                        </ul>
                    </div>

                    <div class="md:col-span-3 lg:col-span-3">
                        <h3 class="text-lg font-semibold text-white mb-4">Rubriques</h3>
                        <ul class="space-y-2">
                            <li><a href="/vente-de-vetements" class="text-white/80 hover:text-white transition-colors duration-300">Mode Fashion</a></li>
                            <li><a href="/course-livrer-domicile" class="text-white/80 hover:text-white transition-colors duration-300">Course Alimentaire</a></li>
                            <li><a href="/livraison-a-domicile" class="text-white/80 hover:text-white transition-colors duration-300">Livreurs Coursiers</a></li>
                            <li><a href="/high-tech-premium" class="text-white/80 hover:text-white transition-colors duration-300">High-tech Premium</a></li>
                            <li><a href="/vendre-sur-application-c1euro" class="text-white/80 hover:text-white transition-colors duration-300">Devenir vendeur</a></li>
                        </ul>
                    </div>
                </div>

                <!-- Copyright -->
                <div class="mt-12 pt-8 border-t border-white/10 flex flex-col md:flex-row justify-between items-center">
                    <p class="text-white/50 text-sm mb-4 md:mb-0">
                        © {new Date().getFullYear()} c1euro. Tous droits réservés.
                    </p>
                    <div class="flex flex-wrap justify-center gap-6">
                        <a href="/conditions-generales" class="text-white/80 hover:text-white transition-colors duration-300 text-sm">Conditions d'utilisation</a>
                        <a href="/politique-de-confidentialite" class="text-white/80 hover:text-white transition-colors duration-300 text-sm">Politique de confidentialité</a>
                        <a href="/cookies" class="text-white/80 hover:text-white transition-colors duration-300 text-sm">Cookies</a>
                    </div>
                </div>
            </div>
        </footer>
    )
}
